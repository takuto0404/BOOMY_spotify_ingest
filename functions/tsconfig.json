{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}