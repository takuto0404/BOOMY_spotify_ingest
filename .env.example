# Token broker endpoint base URL (e.g. https://token-broker.example.com/token)
TOKEN_BROKER_URL=http://localhost:3000/token

# Optional overrides for the ingest worker
DEFAULT_USER_CONCURRENCY=5
SAFETY_WINDOW_MINUTES=120

# Firestore credentials (only needed for local runs)
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# --- Token broker specific ---
# Spotify API credentials (obtain via https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_app_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_app_client_secret

# JSON object mapping user IDs to refresh tokens.
# For local testing this can live in .env, but in production inject via Secret Manager.
# Example: {"test-user":"refresh_token_value"}
SPOTIFY_REFRESH_TOKENS_JSON={}

# Optional: override local server port (defaults to 3000)
# TOKEN_BROKER_PORT=3000
